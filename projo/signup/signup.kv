<FlatButton@ButtonBehavior+Label>:
    font_size: 16

<SignupWindow>:
    id: main_win
    orientation: 'vertical'
    spacing: 10
    space_x: self.size[0] / 3
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'index/f1.png'

    BoxLayout:
        size_hint_y: None
        height: 50
        canvas.before:
            Color:
                rgba: (0,.5,1,1)
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            text: 'TalantA'
            bold: True
            size_hint_x: .9

        FlatButton:
            text: "X"
            size_hint_x: .1
            on_release: root.cancel_signup()
    BoxLayout:
        orientation: 'vertical'
        padding: main_win.space_x, 10
        #spacing: 20
        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            size_hint_y: None
            height: 300
            Label:
                id: info
                text: ''
                markup: True
                size_hint_y: None
                height: 20
            TextInput:
                id: fname_field
                hint_text: "First Name"
                multiline: False
                focus: True
                on_text_validate: lname_field.focus = True
            TextInput:
                id: lname_field
                hint_text: "Last Name"
                multiline: False
                focus: True
                on_text_validate: username_field.focus = True
            TextInput:
                id: username_field
                hint_text: "Username"
                multiline: False
                focus: True
                on_text_validate: email_field.focus = True

            TextInput:
                id: email_field
                hint_text: "email address"
                multiline: False
                on_text_validate: pwd_field.focus = True
            TextInput:
                id: pwd_field
                hint_text: "Password"
                multiline: False
                password: True
                on_text_validate: confirm_pwd_field.focus = True
            TextInput:
                id: confirm_pwd_field
                hint_text: "Confirm Password"
                multiline: False
                password: True
            #Label:
             #   canvas.before:
              #      Color:
               #         rgba: (0,0,0,1)
                #    Rectangle:
                 #       size: self.size
                  #      pos: self.pos
                #text: 'designation:'
            Spinner:
                id: designation_field
                text: 'Sign up as?'
                values: ['artist','enthusiast','gallery']
        Label:
            id: sp
            size_hint_y: None
            height: 40
        Button:
            size_hint_y: None
            height: 40
            background_color: (0,.5,1, 1)
            background_normal:''
            text: "Sign up"
            on_release: root.register_user()
        Label:
            id: sp3
            size_hint_y: None
            height: 40
            text: ''
        Label:
            id: sp2